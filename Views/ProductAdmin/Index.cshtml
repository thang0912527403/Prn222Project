@model IEnumerable<Prn222Project.Models.Product>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Products";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-white">📦 Danh sách sản phẩm</h2>
    <a asp-controller="ProductAdmin" asp-action="Create"
       class="bg-primary text-white px-4 py-2 rounded-lg shadow hover:bg-primary/80 transition">
        + Thêm sản phẩm
    </a>
</div>

<div class="overflow-x-auto bg-dark-2 rounded-lg shadow">
    <table class="min-w-full table-auto text-white">
        <thead class="bg-dark-3 text-sm uppercase tracking-wider text-gray-300">
            <tr>
                <th class="px-4 py-3 text-left">ID</th>
                <th class="px-4 py-3 text-left">Tên</th>
                <th class="px-4 py-3 text-left">Giá</th>
                <th class="px-4 py-3 text-left">Ảnh</th>
                <th class="px-4 py-3 text-left">Trạng thái</th>
                <th class="px-4 py-3 text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="px-4 py-6 text-center text-gray-400">
                        Chưa có sản phẩm nào.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr class="border-b border-dark-3 hover:bg-dark-3 transition">
                        <td class="px-4 py-3">@item.Id</td>
                        <td class="px-4 py-3 font-medium">@item.Name</td>
                        <td class="px-4 py-3">@item.Price.ToString("N0") đ</td>
                        <td class="px-4 py-3">
                            <img src="@item.ImageUrl" alt="@item.Name" class="h-12 w-12 object-cover rounded" />
                        </td>
                        <td class="px-4 py-3">
                            @if (item.IsActive)
                            {
                                <span class="px-2 py-1 text-xs font-semibold bg-green-600/20 text-green-400 rounded">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="px-2 py-1 text-xs font-semibold bg-red-600/20 text-red-400 rounded">
                                    Inactive
                                </span>
                            }
                        </td>
                        <td class="px-4 py-3 text-center space-x-2">
                            <a asp-controller="ProductAdmin" asp-action="Edit" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-blue-600 hover:bg-blue-500 rounded text-white text-sm transition">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <form asp-controller="ProductAdmin" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                <button type="submit" class="px-3 py-1 bg-red-600 rounded hover:bg-red-500 text-white"
                                        onclick="return confirm('Bạn có chắc muốn ẩn sản phẩm này?')">
                                    Ẩn
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="mt-6 flex justify-center">
        <nav class="inline-flex rounded-md shadow">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <a asp-action="Index" asp-route-page="@i" asp-route-pageSize="@ViewBag.PageSize"
                   class="px-4 py-2 border text-sm font-medium
                          @(i == ViewBag.Page
                                             ? "bg-primary text-white border-primary"
                                             : "bg-dark-2 text-gray-300 border-dark-3 hover:bg-dark-3")">
                @i
            </a>
                        }
        </nav>
    </div>

</div>
