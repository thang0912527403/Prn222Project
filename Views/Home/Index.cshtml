                        {
                            <a type="button" class="relative size-8 rounded-full bg-white dark:bg-gray-800 dark:hover:text-black p-1 text-black dark:text-white hover:text-gray-400 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden cursor-pointer"
