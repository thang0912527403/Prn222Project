@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@using Microsoft.AspNetCore.Identity;
@{
    var path = HttpContextAccessor.HttpContext.Request.Path;
    var segment = path.Value.Split('/', StringSplitOptions.RemoveEmptyEntries).LastOrDefault();
    var title = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(segment.Replace("-", " "));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Prn222Project</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body class="bg-dark text-body-dark">
    <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-dark-2 sidebar-scrollbar overflow-y-auto">
            <div class="p-6">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
                        <i class="fas fa-chart-line text-white text-sm"></i>
                    </div>
                    <div class="font-decorative text-xl text-white">
                        HandWooven
                    </div>
                </div>
            </div>

            <nav class="px-4 pb-6">
                <ul class="space-y-2">
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg bg-primary/20 text-primary border-l-4 border-primary">
                            <i class="fas fa-chart-pie w-5"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg text-body-dark hover:bg-dark-3 hover:text-white transition-colors">
                            <i class="fas fa-calendar w-5"></i>
                            <span>Calendar</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg text-body-dark hover:bg-dark-3 hover:text-white transition-colors">
                            <i class="fas fa-user w-5"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg text-body-dark hover:bg-dark-3 hover:text-white transition-colors">
                            <i class="fas fa-tasks w-5"></i>
                            <span>Task</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg text-body-dark hover:bg-dark-3 hover:text-white transition-colors">
                            <i class="fas fa-wpforms w-5"></i>
                            <span>Forms</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg text-body-dark hover:bg-dark-3 hover:text-white transition-colors">
                            <i class="fas fa-table w-5"></i>
                            <span>Tables</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center space-x-3 p-3 rounded-lg text-body-dark hover:bg-dark-3 hover:text-white transition-colors">
                            <i class="fas fa-cog w-5"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-dark-2 border-l border-stroke-dark p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-xl font-bold text-white">@title</h1>
                    </div>
                    <div class="flex">
                        <div class="hidden lg:flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 has-[input:focus-within]:outline-2 has-[input:focus-within]:-outline-offset-2 has-[input:focus-within]:outline-indigo-600 ">
                            <div class="shrink-0 text-base text-gray-500 select-none sm:text-sm/6">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 4a7 7 0 1 1-7 7 7 7 0 0 1 7-7zM22 22l-5.5-5.5" />
                                </svg>
                            </div>
                            <input type="text" name="search" id="search" class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6" placeholder="Tìm kiếm">
                            <div class="grid shrink-0 grid-cols-1 focus-within:relative">
                            </div>
                        </div>
                        <div class="relative flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0 sm:gap-3">
                            <button id="toggleDark" type="button" class="relative size-8 rounded-full dark:bg-white bg-gray-800 dark:hover:text-black p-1 text-gray-400 hover:text-white focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden cursor-pointer">
                                <span class="absolute -inset-1.5"></span>
                                <span class="sr-only">View notifications</span>
                                <i class="fa-solid fa-circle-half-stroke text-xl"></i>
                            </button>
                            <button type="button" class="relative rounded-full dark:bg-white bg-gray-800 dark:hover:text-black p-1 text-gray-400 hover:text-white focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden cursor-pointer">
                                <span class="absolute -inset-1.5"></span>
                                <span class="sr-only">View notifications</span>
                                <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                                </svg>
                            </button>
                            <div class="relative">
                                <button id="userButton" type="button" class="relative size-8 rounded-full dark:bg-white bg-gray-800 dark:hover:text-black p-1 text-gray-400 hover:text-white focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden cursor-pointer">
                                    <span class="absolute -inset-1.5"></span>
                                    <span class="sr-only">Open user menu</span>
                                    <i class="fa-solid fa-user-tie"></i>
                                </button>
                                <!-- Popover -->
                                <div id="popover"
                                     class="popover-arrow absolute right-0 mt-2 w-64 bg-gray-800 border border-gray-700 rounded-lg shadow-lg opacity-0 invisible transform scale-95 transition-all duration-200 z-10"
                                     style="top: 100%;">
                                    <div class="p-4">
                                        <div class="flex items-center space-x-3 mb-3">
                                            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                                                <i class="fa-solid fa-user text-white text-sm"></i>
                                            </div>
                                            <div>
                                                <h3 class="font-semibold text-white">Thang</h3>
                                                <p class="text-sm text-gray-400">Administrator</p>
                                            </div>
                                        </div>
                                        <div class="border-t border-gray-700 pt-3">
                                            <ul class="space-y-1">
                                                <li>
                                                    <a href="#" class="flex items-center space-x-3 px-2 py-2 text-sm text-gray-300 hover:bg-gray-700 rounded-md transition-colors">
                                                        <i class="fa-solid fa-user-circle w-4 h-4"></i>
                                                        <span>Profile</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" class="flex items-center space-x-3 px-2 py-2 text-sm text-gray-300 hover:bg-gray-700 rounded-md transition-colors">
                                                        <i class="fa-solid fa-cog w-4 h-4"></i>
                                                        <span>Settings</span>
                                                    </a>
                                                </li>
                                                <li class="border-t border-gray-700 pt-1">
                                                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="inline">
                                                        <button type="submit" class="w-full flex items-center space-x-3 px-2 py-2 text-sm text-red-400 hover:bg-red-900/20 rounded-md transition-colors">
                                                            <i class="fa-solid fa-sign-out-alt w-4 h-4"></i>
                                                            <span>Logout</span>
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </header>

            <!-- Main Dashboard Content -->
            <main class="flex-1 p-6 overflow-y-auto">
                @RenderBody()
            </main>
        </div>

    </div>

    <script>
        // Sidebar menu interactions
        document.addEventListener('DOMContentLoaded', function() {
            const menuItems = document.querySelectorAll('nav a');

            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Remove active class from all items
                    menuItems.forEach(i => {
                        i.classList.remove('bg-primary/20', 'text-primary', 'border-l-4', 'border-primary');
                        i.classList.add('text-body-dark');
                    });

                    // Add active class to clicked item
                    this.classList.add('bg-primary/20', 'text-primary', 'border-l-4', 'border-primary');
                    this.classList.remove('text-body-dark');
                });
            });

            // User popover toggle functionality
            const userButton = document.getElementById('userButton');
            const popover = document.getElementById('popover');
            let isPopoverOpen = false;

            // Toggle popover when user button is clicked
            userButton.addEventListener('click', function(e) {
                e.stopPropagation();
                togglePopover();
            });

            // Close popover when clicking outside
            document.addEventListener('click', function(e) {
                if (!userButton.contains(e.target) && !popover.contains(e.target)) {
                    closePopover();
                }
            });

            // Close popover when pressing Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && isPopoverOpen) {
                    closePopover();
                }
            });

            function togglePopover() {
                if (isPopoverOpen) {
                    closePopover();
                } else {
                    openPopover();
                }
            }

            function openPopover() {
                popover.classList.remove('opacity-0', 'invisible', 'scale-95');
                popover.classList.add('opacity-100', 'visible', 'scale-100');
                isPopoverOpen = true;
            }

            function closePopover() {
                popover.classList.add('opacity-0', 'invisible', 'scale-95');
                popover.classList.remove('opacity-100', 'visible', 'scale-100');
                isPopoverOpen = false;
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>